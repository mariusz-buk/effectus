; Effectus example
; ----------------
; Graphics triangle demo

BYTE x,y,r
CHAR key

PROC Main()

Graphics(7)

x=80
y=10
r=60

Color=1
Plot(x,y)
DrawTo(x+r-10,y+r)
Color=2
DrawTo(x-r+10,y+r)
Color=3
Drawto(x,y)

x=80
y=14
r=54

Plot(x,y)
DrawTo(x+r-y,y+r)
Color=2
DrawTo(x-r+y,y+r)
Color=3
Drawto(x,y)

PrintE("Triangle")

key=GETD(7)

RETURN
