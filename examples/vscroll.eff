; Effectus example
; ----------------
; Vertical scrolling demo

SBYTE ARRAY TEXT="NNNeffectus@rulezNNN"
BYTE ARRAY DL=[$70$70$70$70$67$1$20$41$0$0]

BYTE
  CH=$2FC,
  VSCROL=$D405
CARD SDLSTL=$230

PROC WAIT=*(BYTE F)[$18$65$14$C5$14$D0$FC$60]

PROC MAIN()
  BYTE I=$E0

  I=$F
  SDLSTL=DL
  WHILE CH=$FF DO
    WHILE I DO
      I==-1
      VSCROL=I
      WAIT(3)
    OD
    WAIT(50)
    WHILE I<$F DO
      I==+1
      VSCROL=I
      WAIT(2)
    OD
  OD
  GRAPHICS(0)
RETURN
